	List<String> customer = new ArrayList<String>();
	
	public Customer(String name, String ssn, String phone, String customerId, String passwd, List<String> Account) {
		this.name = name;
		this.ssn = ssn;
		this.phone = phone;
		this.customerId = customerId;
		this.passwd = passwd;
		this.Account= Account;	
	}
	
