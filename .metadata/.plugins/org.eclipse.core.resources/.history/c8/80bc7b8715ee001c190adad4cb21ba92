package com.varxyz.banking.domain;

public class CheckingAccount extends Account{
	private double overdraftAmount = 2000; // 대출한도액
	
	public String withdraw(double amount) { // 출금
		if(balance < amount) {
			// 잔고부족시 overdraftAmount 금액 한도 내에서 추가 출금을 승인
			overdraftAmount = overdraftAmount + balance;
			overdraftAmount = overdraftAmount - amount;
			throw new InsuffientBalanceException(overdraftAmount + " 잔고가 부족합니다.");
		}else {
			balance = balance - amount;
			String str =  amount + "원이 출금되었습니다.\n" + "현재 잔액은 " + super.balance + "원입니다.";
			return str;
		}
	}
}
