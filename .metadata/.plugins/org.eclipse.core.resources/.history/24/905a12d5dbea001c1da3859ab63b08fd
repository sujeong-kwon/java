package com.varxyz.jv200.mode004;

public class Imoji {
	public String imojiPer(int gameCoin) {
		String answer = "";
		int circle = 700;
		int tri = 300;
		int square = 50;
		int six = 10;
		int eight = 5;
		int star = 1;
		String[] imojiArr = new String[1066];
		for(int i = 0; i < imojiArr.length; i++) {
			if(i < 700) {
				imojiArr[i] = "동그라미";
			}
			else if(i >= 700 && i <1000) {
				imojiArr[i] = "삼각형";
			}
			else if(i >= 1000 && i < 1050) {
				imojiArr[i] = "사각형";
			}
			else if(i >= 1050 && i < 1060) {
				imojiArr[i] = "육각형";
			}
			else if(i >= 1060 && i < 1065) {
				imojiArr[i] = "팔각형";
			}
			else {
				imojiArr[i] = "별!";
			}
		}
		int randomNum = (int) (Math.random() * 1056);
		return imojiArr[randomNum];
	}
